<title>OBEB Hesaplama</title>
<style>
  body { font-family: Arial, sans-serif; margin: 30px; }
  input { width: 100px; margin-right: 10px; }
  button { margin: 5px 0; padding: 5px 10px; }
  .result { margin: 10px 0; padding: 10px; background: #f0f0f0; border-radius: 5px; }
</style>
</head>
<body>
  <h1>OBEB Hesaplama (Euclidean Algorithm)</h1>
  <div>
    <label>A: <input type="number" id="aInput" /></label>
    <label>B: <input type="number" id="bInput" /></label>
    <button onclick="hesapla()">Hesapla</button>
  </div>

  <div class="result" id="resultArea"></div>
  <button id="yenidenBtn" style="display:none;" onclick="yeni()">Yeni Hesaplama</button>

<script>
function OBEB(a, b) {
    while (b != 0) {
        let temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

function hesapla() {
    let a = parseInt(document.getElementById('aInput').value);
    let b = parseInt(document.getElementById('bInput').value);
    if (isNaN(a) || isNaN(b)) {
        alert("Lütfen iki sayı giriniz!");
        return;
    }
    let result = OBEB(a, b);
    document.getElementById('resultArea').innerHTML = `
        ********************<br>
        OBEB: ${result}<br>
        ********************`;
    document.getElementById('yenidenBtn').style.display = 'inline';
}

function yeni() {
    document.getElementById('aInput').value = '';
    document.getElementById('bInput').value = '';
    document.getElementById('resultArea').innerHTML = '';
    document.getElementById('yenidenBtn').style.display = 'none';
}
</script>
</body>
</html>
